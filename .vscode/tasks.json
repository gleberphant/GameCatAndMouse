{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build debug",
            "type": "process",
            "command": "make",
            "args": [
                "PLATFORM=PLATFORM_DESKTOP",
                "BUILD_MODE=DEBUG",
                "PROJECT_NAME=main",
                "OBJS=main.c"
            ],
            "windows": {
                "command": "mingw32-make.exe",
                "args": [
                    "RAYLIB_PATH=${workspaceFolder}/raylib",
                    "PROJECT_NAME=main",
                    "OBJS=main.c",
                    "BUILD_MODE=DEBUG"
                ]
            },
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "build release",
            "type": "shell",
            "command": "make",
            "args": [
                "PLATFORM=PLATFORM_DESKTOP",
                "PROJECT_NAME=main",
                "OBJS=main.c"
            ],
            "windows": {
                "command": "mingw32-make.exe"
            },
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        }
       
    ]
}